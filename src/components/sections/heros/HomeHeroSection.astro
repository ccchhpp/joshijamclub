---
import { Icon } from 'astro-icon/components';
import { Container, Button, SparkleFill, FlowerFill, HeartFill, StarFill } from '@components/odyssey-theme';
---

<Container>
	<section class="hero-section__section">
		<div class="hero-section__text">
				<h1>We create organically grown events.</h1>
				<p>
					Made by joshis for joshis â™¡
				</p>
				<div class="hero-btns__container">
					<Button href="/events" customIcon
						>Our Jams
            <Fragment slot="icon">
              <Icon name="ic:baseline-chevron-right"/>
            </Fragment>
            </Button
					>
				</div>
		</div>
			<div class="hero-section__image-cluster">
				<HeartFill id="svg-heart" />
				<FlowerFill id="svg-flower" />
				<SparkleFill id="svg-sparkle" />
				<StarFill id="svg-star" />
				<SparkleFill id="svg-sparkle-alt1" />
				<StarFill id="svg-star-alt1" />
				<FlowerFill id="svg-flower-alt1" />
				<HeartFill id="svg-heart-alt1" />
			</div>
	</section>
</Container>

<style>
	.hero-section__section {
		margin: calc(var(--section-margin)*2) auto;
		min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
		display: grid;
		grid-template-columns: 1fr 1fr;
		align-items: center;
		gap: 1rem;
	}
	.hero-section__text {
		justify-self: center;
		max-width: 25rem;
	}
	.hero-btns__container {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.hero-btns__container {
		margin-right: 1rem;
	}
	.hero-section__image {
		display: flex;
	}
	.hero-section__image img {
		width: 100%;
		height: 100%;
		max-height: 80vh;
		object-fit: cover;
		border-radius: var(--theme-shape-radius);
	}
	@media (max-width: 768px) {
		.hero-section__section {
			grid-template-columns: 1fr;
		}
	}

	/* Clustered SVG design */
  .hero-section__image-cluster {
    position: relative;
    width: 520px;
    height: 520px;
    margin: 0 auto;
  }
  /* Keyframes for organic floating movement */
  @keyframes hero-float1 {
    0% { transform: translateY(0) translateX(0) scale(1) rotate(-18deg); }
    20% { transform: translateY(-18px) translateX(3px) scale(1.01) rotate(-10deg); }
    50% { transform: translateY(-32px) translateX(-2px) scale(1.01) rotate(-2deg); }
    80% { transform: translateY(-14px) translateX(2px) scale(1.01) rotate(-10deg); }
    100% { transform: translateY(0) translateX(0) scale(1) rotate(-18deg); }
  }
  @keyframes hero-float2 {
    0% { transform: translateY(0) translateX(0) scale(0.95) rotate(25deg); }
    20% { transform: translateY(-22px) translateX(-4px) scale(0.96) rotate(37deg); }
    50% { transform: translateY(-36px) translateX(5px) scale(0.94) rotate(49deg); }
    80% { transform: translateY(-13px) translateX(-3px) scale(0.97) rotate(37deg); }
    100% { transform: translateY(0) translateX(0) scale(0.95) rotate(25deg); }
  }
  @keyframes hero-float3 {
    0% { transform: translateY(0) translateX(0) scale(1.1) rotate(-44deg); }
    20% { transform: translateY(-8px) translateX(2px) scale(1.11) rotate(-32deg); }
    50% { transform: translateY(-28px) translateX(-3px) scale(1.09) rotate(-20deg); }
    80% { transform: translateY(-12px) translateX(2px) scale(1.1) rotate(-32deg); }
    100% { transform: translateY(0) translateX(0) scale(1.1) rotate(-44deg); }
  }
  @keyframes hero-float4 {
    0% { transform: translateY(0) translateX(0) scale(1.05) rotate(48deg); }
    20% { transform: translateY(-12px) translateX(-1px) scale(1.06) rotate(60deg); }
    50% { transform: translateY(-29px) translateX(3px) scale(1.04) rotate(72deg); }
    80% { transform: translateY(-10px) translateX(1px) scale(1.05) rotate(60deg); }
    100% { transform: translateY(0) translateX(0) scale(1.05) rotate(48deg); }
  }
  @keyframes hero-float5 {
    0% { transform: translateY(0) translateX(0) scale(0.9) rotate(2deg); }
    20% { transform: translateY(-10px) translateX(1px) scale(0.91) rotate(14deg); }
    50% { transform: translateY(-25px) translateX(-1px) scale(0.89) rotate(26deg); }
    80% { transform: translateY(-8px) translateX(1px) scale(0.9) rotate(14deg); }
    100% { transform: translateY(0) translateX(0) scale(0.9) rotate(2deg); }
  }
  @keyframes hero-float6 {
    0% { transform: translateY(0) translateX(0) scale(1.2) rotate(-30deg); }
    20% { transform: translateY(-13px) translateX(2px) scale(1.22) rotate(-18deg); }
    50% { transform: translateY(-32px) translateX(-2px) scale(1.18) rotate(-6deg); }
    80% { transform: translateY(-12px) translateX(1px) scale(1.2) rotate(-18deg); }
    100% { transform: translateY(0) translateX(0) scale(1.2) rotate(-30deg); }
  }
  @keyframes hero-float7 {
    0% { transform: translateY(0) translateX(0) scale(0.8) rotate(10deg); }
    20% { transform: translateY(-8px) translateX(2px) scale(0.82) rotate(22deg); }
    50% { transform: translateY(-22px) translateX(-2px) scale(0.78) rotate(34deg); }
    80% { transform: translateY(-7px) translateX(1px) scale(0.8) rotate(22deg); }
    100% { transform: translateY(0) translateX(0) scale(0.8) rotate(10deg); }
  }
  @keyframes hero-float8 {
    0% { transform: translateY(0) translateX(0) scale(1.05) rotate(-60deg); }
    20% { transform: translateY(-10px) translateX(2px) scale(1.07) rotate(-48deg); }
    50% { transform: translateY(-28px) translateX(-2px) scale(1.03) rotate(-36deg); }
    80% { transform: translateY(-8px) translateX(1px) scale(1.05) rotate(-48deg); }
    100% { transform: translateY(0) translateX(0) scale(1.05) rotate(-60deg); }
  }
	.hero-section__image-cluster :global(svg) {
		position: absolute;
		transition: transform 0.3s;
	}
  .hero-section__image-cluster :global(#svg-heart) {
    width: 180px;
    height: 180px;
    top: 80px;
    left: 40px;
    z-index: 2;
    color: var(--theme-surface-1);
    animation: hero-float1 12s ease-in-out infinite alternate;
    animation-delay: -10s;
  }
  .hero-section__image-cluster :global(#svg-flower) {
    width: 140px;
    height: 140px;
    top: 10px;
    left: 240px;
    z-index: 3;
    color: var(--theme-surface-2);
    animation: hero-float2 14s ease-in-out infinite alternate;
    animation-delay: -12s;
  }
  .hero-section__image-cluster :global(#svg-sparkle) {
    width: 110px;
    height: 110px;
    top: 340px;
    left: 100px;
    z-index: 1;
    color: var(--theme-surface-2);
    animation: hero-float3 16s ease-in-out infinite alternate;
    animation-delay: -16s;
  }
  .hero-section__image-cluster :global(#svg-star) {
    width: 100px;
    height: 100px;
    top: 200px;
    left: 370px;
    z-index: 4;
    color: var(--theme-surface-1);
    animation: hero-float4 13s ease-in-out infinite alternate;
    animation-delay: -8s;
  }
  .hero-section__image-cluster :global(#svg-sparkle-alt1) {
    width: 60px;
    height: 60px;
    top: 420px;
    left: 320px;
    z-index: 2;
    color: var(--theme-surface-2);
    opacity: 0.7;
    animation: hero-float5 11s ease-in-out infinite alternate;
    animation-delay: -7s;
  }
  .hero-section__image-cluster :global(#svg-star-alt1) {
    width: 50px;
    height: 50px;
    top: 60px;
    left: 400px;
    z-index: 2;
    color: var(--theme-surface-1);
    opacity: 0.7;
    animation: hero-float6 13s ease-in-out infinite alternate;
    animation-delay: -9s;
  }
  .hero-section__image-cluster :global(#svg-flower-alt1) {
    width: 80px;
    height: 80px;
    top: 350px;
    left: 420px;
    z-index: 2;
    color: var(--theme-surface-2);
    opacity: 0.7;
    animation: hero-float7 15s ease-in-out infinite alternate;
    animation-delay: -11s;
  }
  .hero-section__image-cluster :global(#svg-heart-alt1) {
    width: 100px;
    height: 100px;
    top: 240px;
    left: 210px;
    z-index: 1;
    color: var(--theme-surface-1);
    opacity: 0.7;
    animation: hero-float8 12s ease-in-out infinite alternate;
    animation-delay: -8s;
  }
  @media (max-width: 768px) {
    .about__section {
      margin-top:0;
    }
    .hero-section__section {
      grid-template-columns: 1fr;
      margin-bottom: 0;
    }
    .hero-section__image-cluster {
      width: 320px;
      height: 320px;
      margin-top:2rem;
    }
    .hero-section__image-cluster :global(#svg-heart) { width: 80px; height: 80px; top: 24px; left: 10px; }
    .hero-section__image-cluster :global(#svg-flower) { width: 60px; height: 60px; top: 0; left: 170px; }
    .hero-section__image-cluster :global(#svg-sparkle) { width: 40px; height: 40px; top: 200px; left: 30px; }
    .hero-section__image-cluster :global(#svg-star) { width: 36px; height: 36px; top: 180px; left: 240px; }
    .hero-section__image-cluster :global(#svg-sparkle-alt1) { width: 30px; height: 30px; top: 260px; left: 120px; }
    .hero-section__image-cluster :global(#svg-star-alt1) { width: 24px; height: 24px; top: 40px; left: 260px; }
    .hero-section__image-cluster :global(#svg-flower-alt1) { width: 40px; height: 40px; top: 250px; left: 270px; }
    .hero-section__image-cluster :global(#svg-heart-alt1) { width: 50px; height: 50px; top: 120px; left: 120px; }
  }
</style>