---
const {href, imgSrc, title} = Astro.props;
---

<style>
  .feature-card__card {
    background-color: var(--theme-surface-1);
    color: var(--theme-on-surface-1);
    border-radius: var(--theme-shape-radius);
  }
  .feature-card__link {
    display: block;
    text-decoration: none;
  }
  .featured-card__content {
    padding: 1rem 1rem 1rem 1rem;
     display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow-y: hidden;
  }
  .featured-card__content picture {
    width: 100%;
    height: 100%;
  }
  .feature-card__card .feature-card__img {
    --image-shadow: 0 -0.5rem 1rem rgba(138, 138, 138, 0.12);
    margin: 0 auto;
    width: clamp(60%, 70%, 390px);
    height: auto;
    object-fit: cover;
    /* border-radius: 1rem 1rem 0 0; */
    box-shadow: var(--image-shadow);
    transition: transform var(--theme-transition);
    border-radius: 10px;
  }
  .feature-card__title {
    font-family: var(--theme-font-family-sans);
  }
</style>


<div class="feature-card__card">
  <a class="feature-card__link" href={href}>
    <div class="featured-card__content">
      <h3 class="feature-card__title">{title}</h3>
      <picture>
        <source srcset={`${imgSrc}.png`} type="image/png" >
        <img class="feature-card__img" src={`${imgSrc}.png`} alt={title} loading="lazy" decoding="async" >
      </picture>
    </div>
  </a>
</div> 

