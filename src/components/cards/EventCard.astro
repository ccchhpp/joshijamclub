---
// Props: title, description, href, icon (Astro component)
const { title, description, href, icon: Icon } = Astro.props;
---
<a class="event-card" href={href}>
  <div class="event-card__icon-wrap">
    {Icon && <Icon style="width:48px;height:48px;margin-left:1.2rem;color:var(--theme-surface-2);" />}
  </div>
  <div class="event-card__body">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</a>

<style>
.event-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: var(--theme-primary);
  border-radius: 1.2rem;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.07);
  overflow: hidden;
  text-align: left;
  text-decoration: none;
  color: inherit;
  transition: transform 0.18s, box-shadow 0.18s;
  min-width: 0;
  gap: 1.2rem;
  padding-right: 1.2rem;
}
.event-card:hover {
  transform: translateY(-6px) scale(1.03);
  box-shadow: 0 6px 24px 0 rgba(0,0,0,0.13);
}
.event-card__icon-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  min-width: 56px;
  height: 100%;
}
.event-card__body {
  padding: 1.2rem 0 1.2rem 1.2rem;
  flex: 1 1 0%;
}
.event-card__body h3 {
  margin: 0 0 0.5rem 0;
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--theme-on-surface-1);
}
.event-card__body p {
  margin: 0;
  font-size: 1rem;
  color: var(--theme-on-surface-1);
}
</style>
