    animation-delay: -14s;
  }
  .about-image-cluster :global(#about-svg-flower-alt3) {
    width: 24px;
    height: 24px;
    top: 40px;
    left: 500px;
    z-index: 2;
    color: var(--theme-surface-2);
    opacity: 0.4;
    animation: float10 12s ease-in-out infinite alternate;
    animation-delay: -9s;
  }
  .about-image-cluster :global(#about-svg-heart-alt3) {
    width: 24px;
    height: 24px;
    top: 390px;
    left: 260px;
    z-index: 1;
    color: var(--theme-surface-1);
    opacity: 0.4;
    animation: float5 13s ease-in-out infinite alternate;
    animation-delay: -11s;
  }
  @media (max-width: 768px) {
    .about-image-cluster {
      width: 320px;
      height: 160px;
      margin-top: 1rem;
      margin-bottom: 1rem;
    }
    .about-image-cluster :global(#about-svg-heart) { width: 50px; height: 50px; top: 10px; left: 10px; }
    .about-image-cluster :global(#about-svg-flower) { width: 36px; height: 36px; top: 0; left: 180px; }
    .about-image-cluster :global(#about-svg-sparkle) { width: 24px; height: 24px; top: 80px; left: 30px; }
    .about-image-cluster :global(#about-svg-star) { width: 22px; height: 22px; top: 40px; left: 260px; }
    .about-image-cluster :global(#about-svg-sparkle-alt1) { width: 14px; height: 14px; top: 120px; left: 120px; }
    .about-image-cluster :global(#about-svg-star-alt1) { width: 10px; height: 10px; top: 20px; left: 300px; }
    .about-image-cluster :global(#about-svg-flower-alt1) { width: 18px; height: 18px; top: 90px; left: 270px; }
