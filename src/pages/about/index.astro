    .about-image-cluster :global(#about-svg-heart-alt2) { width: 10px; height: 10px; top: 80px; left: 180px; }
    .about-image-cluster :global(#about-svg-sparkle-alt3) { width: 8px; height: 8px; top: 40px; left: 60px; }
    .about-image-cluster :global(#about-svg-star-alt3) { width: 6px; height: 6px; top: 140px; left: 320px; }
    .about-image-cluster :global(#about-svg-flower-alt3) { width: 8px; height: 8px; top: 20px; left: 200px; }
    .about-image-cluster :global(#about-svg-heart-alt3) { width: 8px; height: 8px; top: 140px; left: 100px; }
  }
</style>
