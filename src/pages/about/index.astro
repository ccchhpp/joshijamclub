    0%{

    }
    100%{
      transform: translateY(-5%);
    }
  }
  .about-image-cluster :global(svg) {
    position: absolute;
    transition: transform 0.3s;
  }
  /* Randomized, spread-out placements for a wide cluster */
  .about-image-cluster :global(#about-svg-heart) {
    width: 120px;
    height: 120px;
