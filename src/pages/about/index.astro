    height: 70px;
    top: 200px;
    left: 340px;
    z-index: 1;
    color: var(--theme-surface-1);
    opacity: 0.7;
    animation: float8 12s ease-in-out infinite alternate;
    animation-delay: -8s;
  }
  .about-image-cluster :global(#about-svg-sparkle-alt2) {
    width: 40px;
    height: 40px;
    top: 390px;
    left: 90px;
    z-index: 2;
    color: var(--theme-surface-2);
    opacity: 0.5;
    animation: float9 14s ease-in-out infinite alternate;
    animation-delay: -10s;
  }
  .about-image-cluster :global(#about-svg-star-alt2) {
    width: 24px;
    height: 24px;
    top: 180px;
    left: 700px;
    z-index: 2;
    color: var(--theme-surface-1);
    opacity: 0.5;
    animation: float10 13s ease-in-out infinite alternate;
    animation-delay: -6s;
  }
  .about-image-cluster :global(#about-svg-flower-alt2) {
    width: 40px;
    height: 40px;
    top: 400px;
    left: 540px;
    z-index: 2;
    color: var(--theme-surface-2);
    opacity: 0.5;
    animation: float6 12s ease-in-out infinite alternate;
    animation-delay: -12s;
  }
  .about-image-cluster :global(#about-svg-heart-alt2) {
    width: 40px;
    height: 40px;
    top: 320px;
    left: 320px;
    z-index: 1;
    color: var(--theme-surface-1);
    opacity: 0.5;
    animation: float7 14s ease-in-out infinite alternate;
    animation-delay: -13s;
  }
  .about-image-cluster :global(#about-svg-sparkle-alt3) {
    width: 30px;
    height: 30px;
    top: 120px;
    left: 200px;
    z-index: 2;
    color: var(--theme-surface-2);
    opacity: 0.4;
    animation: float8 11s ease-in-out infinite alternate;
    animation-delay: -5s;
  }
  .about-image-cluster :global(#about-svg-star-alt3) {
    width: 18px;
