---
import { FlowerFill, HeartFill, SparkleFill, StarFill, TextSection } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';

const seo = {
	title: 'About Us | Joshi Jam',
	description: 'About Us Page',
};
---

<Layout {seo}>
  <section class="hero-section__section">
    <div class="hero-section__text">
      <h1>About Us</h1>
      <p>
        Joshi Jam is a team of passionate fans based in Southern California dedicated to bringing the fun of community back into fandom events. We welcome all joshi (and danshi) to come embrace their interests, no matter how niche.
        <br><br>
        Fujoshi? Himejoshi? Yumejoshi? No problem!
        <br><br>
        Joshi Jam plans our own events and can also help bring your specialty events to life. Check out our <a href="/events">upcoming jams</a> and join in!
        <br><br>
        Want to collaborate? Don’t be shy! You can reach us by email, any of our social media, or our contact form <a href="/contact">here</a>.
        <br><br><br>
        ___
        <br>
        <i>Joshi</i> (女子) - Japanese for young woman
        <br>
        <i>Danshi</i> (男子) - Japanese for young man
      </p>
    </div>
    <div class="hero-section__image">
      <div class="about-image-cluster-wrapper">
        <div class="about-image-cluster">
          <HeartFill id="about-svg-heart" />
          <FlowerFill id="about-svg-flower" />
          <SparkleFill id="about-svg-sparkle" />
          <StarFill id="about-svg-star" />
          <SparkleFill id="about-svg-sparkle-alt1" />
          <StarFill id="about-svg-star-alt1" />
          <FlowerFill id="about-svg-flower-alt1" />
          <HeartFill id="about-svg-heart-alt1" />
          <SparkleFill id="about-svg-sparkle-alt2" />
          <StarFill id="about-svg-star-alt2" />
          <FlowerFill id="about-svg-flower-alt2" />
          <HeartFill id="about-svg-heart-alt2" />
          <SparkleFill id="about-svg-sparkle-alt3" />
          <StarFill id="about-svg-star-alt3" />
          <FlowerFill id="about-svg-flower-alt3" />
          <HeartFill id="about-svg-heart-alt3" />
        </div>
        <div class="about-image-overlay"></div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero-section__section {
    margin: var(--section-margin) auto;
    min-height: clamp(90vh, 100vw, calc(100vh - var(--navbar-height)));
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 1rem;
    position: relative;
  }
  .hero-section__text {
    justify-self: center;
    max-width: 25rem;
    position: relative;
    z-index: 2;
  }
  .hero-section__image {
    display: flex;
    position: relative;
    z-index: 1;
  }
  @media (max-width: 1100px) {
    .hero-section__section {
      margin: 2rem auto 0 auto;
      grid-template-columns: 1fr;
      min-height: 60vh;
    }
    .hero-section__image {
      position: absolute;
      top: 50%;
      left: 0;
      width: 95vw;
      height: 100%;
      transform: translateY(-50%);
      z-index: 1;
      pointer-events: none;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .hero-section__image > :global(*) {
      width: 95vw !important;
      min-width: 95vw !important;
      max-width: 95vw !important;
      height: 100%;
      object-fit: cover;
      border-radius: 0 !important;
      display: block;
    }
    .hero-section__text {
      position: relative;
      z-index: 2;
      border-radius: var(--theme-shape-radius);
      padding: 2rem 1rem;
      margin: 0 auto;
      max-width: 90vw;
    }
  }
  .about-image-cluster {
    position: relative;
    width: 720px;
    height: 420px;
    margin: 0 auto;
    max-width: 100vw;
  }
  /* Keyframes for organic floating movement */
  @keyframes float1 {
    0% { transform: translateY(0) translateX(0) scale(1) rotate(-18deg); }
    20% { transform: translateY(-12px) translateX(3px) scale(1.01) rotate(-10deg); }
    50% { transform: translateY(-18px) translateX(-2px) scale(1.01) rotate(-2deg); }
    80% { transform: translateY(-10px) translateX(2px) scale(1.01) rotate(-10deg); }
    100% { transform: translateY(0) translateX(0) scale(1) rotate(-18deg); }
  }
  @keyframes float2 {
    0% { transform: translateY(0) translateX(0) scale(0.95) rotate(25deg); }
    20% { transform: translateY(-14px) translateX(-4px) scale(0.96) rotate(37deg); }
    50% { transform: translateY(-24px) translateX(5px) scale(0.94) rotate(49deg); }
    80% { transform: translateY(-10px) translateX(-3px) scale(0.97) rotate(37deg); }
    100% { transform: translateY(0) translateX(0) scale(0.95) rotate(25deg); }
  }
  @keyframes float3 {
    0% { transform: translateY(0) translateX(0) scale(1.1) rotate(-44deg); }
    20% { transform: translateY(-6px) translateX(2px) scale(1.11) rotate(-32deg); }
    50% { transform: translateY(-20px) translateX(-3px) scale(1.09) rotate(-20deg); }
    80% { transform: translateY(-8px) translateX(2px) scale(1.1) rotate(-32deg); }
    100% { transform: translateY(0) translateX(0) scale(1.1) rotate(-44deg); }
  }
  @keyframes float4 {
    0% { transform: translateY(0) translateX(0) scale(1.05) rotate(48deg); }
    20% { transform: translateY(-8px) translateX(-1px) scale(1.06) rotate(60deg); }
    50% { transform: translateY(-32px) translateX(3px) scale(1.04) rotate(72deg); }
    80% { transform: translateY(-12px) translateX(1px) scale(1.05) rotate(60deg); }
    100% { transform: translateY(0) translateX(0) scale(1.05) rotate(48deg); }
  }
  @keyframes float5 {
    0% { transform: translateY(0) translateX(0) scale(0.9) rotate(2deg); }
    20% { transform: translateY(-2px) translateX(1px) scale(0.91) rotate(14deg); }
    50% { transform: translateY(-14px) translateX(-1px) scale(0.89) rotate(26deg); }
    80% { transform: translateY(-4px) translateX(1px) scale(0.9) rotate(14deg); }
    100% { transform: translateY(0) translateX(0) scale(0.9) rotate(2deg); }
  }
  /* More keyframes for additional icons */
  @keyframes float6 {
    0% { transform: translateY(0) translateX(0) scale(0.8) rotate(10deg); }
    20% { transform: translateY(-8px) translateX(2px) scale(0.82) rotate(22deg); }
    50% { transform: translateY(-18px) translateX(-2px) scale(0.78) rotate(34deg); }
    80% { transform: translateY(-8px) translateX(1px) scale(0.8) rotate(22deg); }
    100% { transform: translateY(0) translateX(0) scale(0.8) rotate(10deg); }
  }
  @keyframes float7 {
    0% { transform: translateY(0) translateX(0) scale(1.2) rotate(-30deg); }
    20% { transform: translateY(-10px) translateX(2px) scale(1.22) rotate(-18deg); }
    50% { transform: translateY(-24px) translateX(-2px) scale(1.18) rotate(-6deg); }
    80% { transform: translateY(-10px) translateX(1px) scale(1.2) rotate(-18deg); }
    100% { transform: translateY(0) translateX(0) scale(1.2) rotate(-30deg); }
  }
  @keyframes float8 {
    0% { transform: translateY(0) translateX(0) scale(0.7) rotate(20deg); }
    20% { transform: translateY(-8px) translateX(-2px) scale(0.72) rotate(32deg); }
    50% { transform: translateY(-18px) translateX(2px) scale(0.68) rotate(44deg); }
    80% { transform: translateY(-8px) translateX(-1px) scale(0.7) rotate(32deg); }
    100% { transform: translateY(0) translateX(0) scale(0.7) rotate(20deg); }
  }
  @keyframes float9 {
    0% { transform: translateY(0) translateX(0) scale(1.05) rotate(-60deg); }
    20% { transform: translateY(-8px) translateX(2px) scale(1.07) rotate(-48deg); }
    50% { transform: translateY(-18px) translateX(-2px) scale(1.03) rotate(-36deg); }
    80% { transform: translateY(-8px) translateX(1px) scale(1.05) rotate(-48deg); }
    100% { transform: translateY(0) translateX(0) scale(1.05) rotate(-60deg); }
  }
  @keyframes float10 {
    0% { transform: translateY(0) translateX(0) scale(0.9) rotate(90deg); }
    20% { transform: translateY(-8px) translateX(-2px) scale(0.92) rotate(102deg); }
    50% { transform: translateY(-18px) translateX(2px) scale(0.88) rotate(114deg); }
    80% { transform: translateY(-8px) translateX(-1px) scale(0.9) rotate(102deg); }
    100% { transform: translateY(0) translateX(0) scale(0.9) rotate(90deg); }
  }
  .about-image-cluster :global(svg) {
    position: absolute;
    transition: transform 0.3s;
  }
  /* Randomized, spread-out placements for a wide cluster */
  .about-image-cluster :global(#about-svg-heart) {
    width: 120px;
    height: 120px;
    top: 40px;
    left: 80px;
    z-index: 2;
    color: var(--theme-surface-1);
    animation: float1 12s ease-in-out infinite alternate;
    animation-delay: -10s;
  }
  .about-image-cluster :global(#about-svg-flower) {
    width: 90px;
    height: 90px;
    top: 60px;
    left: 320px;
    z-index: 3;
    color: var(--theme-surface-2);
    animation: float2 14s ease-in-out infinite alternate;
    animation-delay: -12s;
  }
  .about-image-cluster :global(#about-svg-sparkle) {
    width: 70px;
    height: 70px;
    top: 250px;
    left: 180px;
    z-index: 1;
    color: var(--theme-surface-2);
    animation: float3 16s ease-in-out infinite alternate;
    animation-delay: -16s;
  }
  .about-image-cluster :global(#about-svg-star) {
    width: 80px;
    height: 80px;
    top: 160px;
    left: 500px;
    z-index: 4;
    color: var(--theme-surface-1);
    animation: float4 13s ease-in-out infinite alternate;
    animation-delay: -8s;
  }
  .about-image-cluster :global(#about-svg-sparkle-alt1) {
    width: 50px;
    height: 50px;
    top: 340px;
    left: 420px;
    z-index: 2;
    color: var(--theme-surface-2);
    opacity: 0.7;
    animation: float5 11s ease-in-out infinite alternate;
    animation-delay: -7s;
  }
  .about-image-cluster :global(#about-svg-star-alt1) {
    width: 36px;
    height: 36px;
    top: 60px;
    left: 650px;
    z-index: 2;
    color: var(--theme-surface-1);
    opacity: 0.7;
    animation: float6 13s ease-in-out infinite alternate;
    animation-delay: -9s;
  }
  .about-image-cluster :global(#about-svg-flower-alt1) {
    width: 60px;
    height: 60px;
    top: 300px;
    left: 600px;
    z-index: 2;
    color: var(--theme-surface-2);
    opacity: 0.7;
    animation: float7 15s ease-in-out infinite alternate;
    animation-delay: -11s;
  }
  .about-image-cluster :global(#about-svg-heart-alt1) {
    width: 70px;
    height: 70px;
    top: 200px;
    left: 340px;
    z-index: 1;
    color: var(--theme-surface-1);
    opacity: 0.7;
    animation: float8 12s ease-in-out infinite alternate;
    animation-delay: -8s;
  }
  .about-image-cluster :global(#about-svg-sparkle-alt2) {
    width: 40px;
    height: 40px;
    top: 390px;
    left: 90px;
    z-index: 2;
    color: var(--theme-surface-2);
    opacity: 0.5;
    animation: float9 14s ease-in-out infinite alternate;
    animation-delay: -10s;
  }
  .about-image-cluster :global(#about-svg-star-alt2) {
    width: 24px;
    height: 24px;
    top: 180px;
    left: 700px;
    z-index: 2;
    color: var(--theme-surface-1);
    opacity: 0.5;
    animation: float10 13s ease-in-out infinite alternate;
    animation-delay: -6s;
  }
  .about-image-cluster :global(#about-svg-flower-alt2) {
    width: 40px;
    height: 40px;
    top: 400px;
    left: 540px;
    z-index: 2;
    color: var(--theme-surface-2);
    opacity: 0.5;
    animation: float6 12s ease-in-out infinite alternate;
    animation-delay: -12s;
  }
  .about-image-cluster :global(#about-svg-heart-alt2) {
    width: 40px;
    height: 40px;
    top: 320px;
    left: 320px;
    z-index: 1;
    color: var(--theme-surface-1);
    opacity: 0.5;
    animation: float7 14s ease-in-out infinite alternate;
    animation-delay: -13s;
  }
  .about-image-cluster :global(#about-svg-sparkle-alt3) {
    width: 30px;
    height: 30px;
    top: 120px;
    left: 200px;
    z-index: 2;
    color: var(--theme-surface-2);
    opacity: 0.4;
    animation: float8 11s ease-in-out infinite alternate;
    animation-delay: -5s;
  }
  .about-image-cluster :global(#about-svg-star-alt3) {
    width: 18px;
    height: 18px;
    top: 380px;
    left: 700px;
    z-index: 2;
    color: var(--theme-surface-1);
    opacity: 0.4;
    animation: float9 13s ease-in-out infinite alternate;
    animation-delay: -14s;
  }
  .about-image-cluster :global(#about-svg-flower-alt3) {
    width: 24px;
    height: 24px;
    top: 40px;
    left: 500px;
    z-index: 2;
    color: var(--theme-surface-2);
    opacity: 0.4;
    animation: float10 12s ease-in-out infinite alternate;
    animation-delay: -9s;
  }
  .about-image-cluster :global(#about-svg-heart-alt3) {
    width: 24px;
    height: 24px;
    top: 390px;
    left: 260px;
    z-index: 1;
    color: var(--theme-surface-1);
    opacity: 0.4;
    animation: float5 13s ease-in-out infinite alternate;
    animation-delay: -11s;
  }
  @media (max-width: 1100px) {
    .hero-section__section {
      margin: 2rem auto 0 auto;
      grid-template-columns: 1fr;
    }
    .hero-section__text {
      background: transparent !important;
    }
    .about-image-cluster-wrapper {
      position: absolute;
      inset: 0;
      width: 95%;
      height: 100%;
      min-width: 95%;
      min-height: 100%;
      max-width: 95%;
      max-height: 100%;
      margin: 0;
      left: 0;
      top: 0;
      transform: none;
      z-index: 1;
      pointer-events: none;
    }
    .about-image-cluster {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 1;
    }
    .about-image-overlay {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      background: rgba(255,255,255,0.7);
      z-index: 2;
      pointer-events: none;
    }
    .about-image-cluster :global(svg) {
      position: absolute;
      pointer-events: none;
    }
    .about-image-cluster :global(#about-svg-heart) { width: 28%; height: 28%; top: 8%; left: 2%; }
    .about-image-cluster :global(#about-svg-flower) { width: 20%; height: 20%; top: 2%; left: 60%; }
    .about-image-cluster :global(#about-svg-sparkle) { width: 12%; height: 12%; top: 60%; left: 8%; }
    .about-image-cluster :global(#about-svg-star) { width: 14%; height: 14%; top: 30%; left: 80%; }
    .about-image-cluster :global(#about-svg-sparkle-alt1) { width: 9%; height: 9%; top: 80%; left: 60%; }
    .about-image-cluster :global(#about-svg-star-alt1) { width: 7%; height: 7%; top: 4%; left: 90%; }
    .about-image-cluster :global(#about-svg-flower-alt1) { width: 10%; height: 10%; top: 70%; left: 80%; }
    .about-image-cluster :global(#about-svg-heart-alt1) { width: 10%; height: 10%; top: 50%; left: 40%; }
    .about-image-cluster :global(#about-svg-sparkle-alt2) { width: 6%; height: 6%; top: 90%; left: 8%; }
    .about-image-cluster :global(#about-svg-star-alt2) { width: 5%; height: 5%; top: 60%; left: 95%; }
    .about-image-cluster :global(#about-svg-flower-alt2) { width: 6%; height: 6%; top: 90%; left: 80%; }
    .about-image-cluster :global(#about-svg-heart-alt2) { width: 6%; height: 6%; top: 60%; left: 56%; }
    .about-image-cluster :global(#about-svg-sparkle-alt3) { width: 5%; height: 5%; top: 20%; left: 16%; }
    .about-image-cluster :global(#about-svg-star-alt3) { width: 4%; height: 4%; top: 90%; left: 95%; }
    .about-image-cluster :global(#about-svg-flower-alt3) { width: 5%; height: 5%; top: 8%; left: 70%; }
    .about-image-cluster :global(#about-svg-heart-alt3) { width: 5%; height: 5%; top: 90%; left: 30%; }
  }
</style>
